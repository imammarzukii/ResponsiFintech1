<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3DADA"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sellit.android.cs4251.com.sellit.SignUpActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="320dp"
        android:layout_height="191dp"
        app:srcCompat="@drawable/cell_it" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160sp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="@string/first_name"
            android:textSize="20sp"
            tools:text="Name" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160sp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="@string/email"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/emaiid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160sp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="@string/password"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="160sp"
            android:layout_height="85dp"
            android:layout_gravity="start"
            android:text="@string/c_password"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"></LinearLayout>

    <LinearLayout
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


    </LinearLayout>

    <Button
        android:id="@+id/sign_up_confirm_button"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="confirm"
        android:textStyle="bold" />

</LinearLayout>

